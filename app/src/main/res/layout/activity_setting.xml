<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_title_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/listSeparatorTextViewStyle"
                android:text="Основные настройки" />
            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                android:visibility="gone"
                >



                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Адрес сервиса"
                    android:padding="10dp"
                    android:textSize="25sp"
                    />


                <TextView
                    android:id="@+id/tv_title_portal_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:attr/listSeparatorTextViewStyle"
                    android:text="Настройка для портала врача"
                    android:visibility="gone"
                    />

                <EditText
                    android:id="@+id/et_wsdl_portal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Адрес портала врача"
                    android:padding="10dp"
                    android:textSize="25sp"
                    android:visibility="gone"
                    />
                <EditText
                    android:id="@+id/et_guid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Guid разработчика"
                    android:padding="10dp"
                    android:textSize="25sp"
                    android:visibility="gone"
                    />
                <EditText
                    android:id="@+id/et_idLPU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Id ЛПУ из справочника 64"
                    android:padding="10dp"
                    android:textSize="25sp"
                    android:visibility="gone"
                    />
                <EditText
                    android:id="@+id/et_url_token"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Адрес получения токена"
                    android:padding="10dp"
                    android:textSize="25sp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="25sp"
                    android:background="#f2dede"
                    android:hint="@string/tv_ssmp_text_error"
                    android:visibility="gone"
                    />

                <Button
                    android:id="@+id/b_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#449d44"
                    android:text="Сохранить"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
                <ProgressBar
                    android:id="@+id/pb_loader_indicator"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_licenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tv_licenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Лицензионное соглашение"
                        android:autoLink="web"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:textSize="25sp"
                        android:background="#fcf8e3"
                        />

                    <TextView
                        android:id="@+id/tv_licenses_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:textSize="25sp"
                        android:background="#f2dede"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/textViewColorLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Я принимаю условия соглашения"
                            android:layout_margin="10dp"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/textViewColorSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Отметить если принмаете"
                            android:layout_marginLeft="10dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="2dp">

                        <CheckBox
                            android:id="@+id/checkBoxBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/b_send_licenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#449d44"
                        android:text="Принять"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>