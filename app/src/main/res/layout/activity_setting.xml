<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/tv_title_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/listSeparatorTextViewStyle"
            android:text="Основные настройки" />
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Адрес сервиса"
            android:padding="10dp"
            android:textSize="25sp"
            />


        <TextView
            android:id="@+id/tv_title_portal_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/listSeparatorTextViewStyle"
            android:text="Настройка для портала врача"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/et_wsdl_portal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Адрес портала врача"
            android:padding="10dp"
            android:textSize="25sp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/et_guid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Guid разработчика"
            android:padding="10dp"
            android:textSize="25sp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/et_idLPU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Id ЛПУ из справочника 64"
            android:padding="10dp"
            android:textSize="25sp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/et_url_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Адрес получения токена"
            android:padding="10dp"
            android:textSize="25sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:background="#f2dede"
            android:hint="@string/tv_ssmp_text_error"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/b_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#449d44"
            android:text="Сохранить"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
        <ProgressBar
            android:id="@+id/pb_loader_indicator"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>