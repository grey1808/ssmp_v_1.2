<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_about_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#d9edf7"
            android:padding="10dp"
            android:text="Информация о версии ПО"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#286090"
            android:text="Загрузить последнюю версию"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <ProgressBar
            android:id="@+id/pb_loader_indicator"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="@string/tv_ssmp_text_error"
            android:textSize="25sp"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>